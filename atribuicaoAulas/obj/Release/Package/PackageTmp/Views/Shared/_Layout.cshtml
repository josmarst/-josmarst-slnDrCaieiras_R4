        <section id="main-content" class="relative">
            <section class="wrapper">
                @if (recado != null)
                {
                    if (recado.dataRecado != null && recado.dataRecado != "")
                    {<h4><b>ATRIBUIÇÃO DE AULA</b> - @recado.dataRecado</h4>}

                    if (recado.EnderecoRecado != null && recado.EnderecoRecado != "")
                    {<h4><b>Endereço</b>: @recado.EnderecoRecado</h4>}

                    if (recado.descrRecado != null && recado.descrRecado != "")
                    {
                        recado.descrRecado = recado.descrRecado.Trim();
                        if (recado.descrRecado.Contains("Atenção") || recado.descrRecado.Contains("atenção") || recado.descrRecado.Contains("ATENÇÃO") || recado.descrRecado.Contains("atencao") || recado.descrRecado.Contains("ATENCAO"))
                        {
                            recado.descrRecado = recado.descrRecado.Replace("Atenção", "ATENÇÃO: ").Replace("atenção", "ATENÇÃO: v").Replace("atencao", "ATENÇÃO: ").Replace("ATENCAO", "ATENÇÃO: ");
                            <h4 id="Hrecados"><span style="color: #ff0000">ATENÇÃO: </span>@recado.descrRecado.Substring(8) </h4>
                        }
                        else
                        {
                            <h4 id="Hrecados">@recado.descrRecado</h4>
                        }
                    }
