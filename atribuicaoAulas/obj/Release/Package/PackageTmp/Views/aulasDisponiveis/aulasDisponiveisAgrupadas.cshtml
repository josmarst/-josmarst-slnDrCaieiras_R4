@model List<atribuicaoAulas.aulasDisponiveisAgrupadas>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var LstDisciplina = ViewBag.descrDisciplina;
    var disciplin = string.Empty;
}

<div class="panel panel-default col-lg-6 offset-0 ">
    <div class="panel-heading">
        <h2>Saldo de Aulas</h2>
        <span class="tools pull-right">  </span>
    </div>
    <div class="panel-body">
        <div class="col-lg-12 offset-0">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped sortable-theme-bootstrap table-link border0" data-sortable>
                    <tr>
                        <th>
                            Disciplina
                        </th>
                        <th>
                            Qtd. Aulas
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @foreach (var disciplina in LstDisciplina)
                            {
                                if (disciplina.IdDisciplina == item.id)
                                {
                                    disciplin = disciplina.descrDisciplina;
                                }
                            }
                            <td>@Html.ActionLink(disciplin, "DetailsDisciplina", new { id = item.id })</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.qtdeAulas)
                            </td>

                            <td>
                                @Html.ActionLink("Detalhes", "DetailsDisciplina", new { id = item.id })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>