<script>
    var arrAulas = new Array();

    function Filtrar() {
        var Escola = $("#idEscola").val();
        var CPF = $("#CPF").val();
        var Disciplina = $("#idDisciplina").val();
        var TipoAula = $("#idTipoAula").val();
        var dtCadastroInicio = $("#dtcadastroInicio").val();
        var dtCadastroFim = $("#dtcadastroFim").val();
        $('#divFiltro').html();

        if (CPF != "" && !validarCPF(CPF)) { alert("CPF inváliido!"); return; }

        $.ajax({
            type: "POST",
            url: "/aulasDisponiveis/Filtrar",
            data: { Escola: Escola, CPF: CPF, Disciplina: Disciplina, TipoAula: TipoAula, dtCadastroInicio: dtCadastroInicio, dtCadastroFim: dtCadastroFim },
            dataType: 'html',
            cache: false,
            async: true,
            success: function (result) {
               $("#divFiltro").show();
                $('#divFiltro').html(result);
            },
            error: function (result) {
                mostrarMensagemErro("Erro ao buscar os dados.");
            }
        });
    }

    function validarCPF(cpf) {
        cpf = cpf.replace(/[^\d]+/g, '');
        if (cpf == '') return false;
        // Elimina CPFs invalidos conhecidos
        if (cpf.length != 11 ||
            cpf == "00000000000" ||
            cpf == "11111111111" ||
            cpf == "22222222222" ||
            cpf == "33333333333" ||
            cpf == "44444444444" ||
            cpf == "55555555555" ||
            cpf == "66666666666" ||
            cpf == "77777777777" ||
            cpf == "88888888888" ||
            cpf == "99999999999")
            return false;
        // Valida 1o digito
        add = 0;
        for (i = 0; i < 9; i++)
            add += parseInt(cpf.charAt(i)) * (10 - i);
        rev = 11 - (add % 11);
        if (rev == 10 || rev == 11)
            rev = 0;
        if (rev != parseInt(cpf.charAt(9)))
            return false;
        // Valida 2o digito
        add = 0;
        for (i = 0; i < 10; i++)
            add += parseInt(cpf.charAt(i)) * (11 - i);
        rev = 11 - (add % 11);
        if (rev == 10 || rev == 11)
            rev = 0;
        if (rev != parseInt(cpf.charAt(10)))
            return false;
        return true;
    }

