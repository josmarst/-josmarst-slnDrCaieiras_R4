@model List<atribuicaoAulas.Models.DiasSemanaHorarioTurma>
@{
	var dsem = "";
	var hor = "";
}
<table class="table table-striped">
	<tr>
		<th>Disciplina  </th>
		<th>Turno		</th>
		<th>Dia Semana	</th>
		<th>Aulas		</th>
		<th>Turma		</th>
		<th>            </th>
	</tr>

	@foreach (var item in Model)
	{
		dsem = ""; hor = "";
		<tr>
			<th>@item.descrDisciplina</th>
			<th>@item.descrTurno</th>
			@foreach (var diaS in item.descrDiaDaSemana)
			{
				dsem = dsem + " " + diaS;
			}
			<th>@dsem </th>
			@foreach (var ho in item.descrHorario)
			{
				hor = hor + " " + ho;
			}
			<th>@hor </th>
			<th>
				@item.turma
			</th>
			<td>
				<p onclick="ajustar(@item.idDiasSemanaHorarioTurma); return false;">Excluir</p>	
			</td>
		</tr>
	}

</table>

<script src="~/Scripts/jquery-1.8.2.min.js"></script>

<script type="text/javascript">
	function ajustar(id) {
		$.ajax(
			{
				type: 'GET',
				url: '/ACESSO/Delete',
				data: { id: id },
				dataType: 'html',
				cache: false,
				async: true,
				success: function (data) {
					$('#dvResults').empty();
					$('#dvResults').append(data);
				}
			});
	}
</script>