@model List<atribuicaoAulas.aulasDisponiveisAgrupadas>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    var LstEscola = ViewBag.descrEscola;
    var escol = string.Empty;
    var ViewBagidDisciplina = ViewBag.idDisciplina;
}

<div class="panel panel-default col-lg-6 offset-0 ">
    <div class="panel-heading">
        <h2>Aulas Disponíveis</h2>
        <span class="tools pull-right">  </span>
    </div>
    <div class="panel-body">
        <div class="col-lg-12 offset-0">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped sortable-theme-bootstrap table-link border0" data-sortable>
                    <tr>
                        <th>
                            Escola
                        </th>
                        <th>
                            Qtd. Aulas
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            @foreach (var escola in LstEscola)
                            {
                                if (escola.IdEscola == item.id)
                                {
                                    escol = escola.descrEscola;
                                }
                            }
                            <td>@Html.ActionLink(escol, "DetailsEscola", new { idEscola = item.id, idDisciplina = ViewBagidDisciplina, profTitular=item.profTitular })</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.qtdeAulas)
                            </td>

                            <td>
                                @Html.ActionLink("Detalhes", "DetailsEscola", new { idEscola = item.id, idDisciplina = ViewBagidDisciplina, profTitular = item.profTitular })
                            </td>
                        </tr>
                    }
                </table>
                <div>
                    @Html.ActionLink("Voltar", "aulasdisponiveisagrupadas", null, null, new { @class = "btn btn-primary btn-large" })
                </div>
            </div>
        </div>
    </div>
</div>

